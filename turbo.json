{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "ci:pull": {
      "dependsOn": ["^ci:pull"],
      "outputs": [".vercel/**"]
    },
    "ci:build": {
      "dependsOn": ["^ci:build", "^ci:pull"],
      "outputs": [".vercel/**"]
    },
    "ci:deploy": {
      "dependsOn": ["^ci:build", "^ci:pull", "^ci:deploy"],
      "outputs": [".vercel/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", ".expo/**"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "VERCEL_TOKEN",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "DATABASE_URL",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "DOMAIN"
  ]
}
